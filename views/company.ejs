<%- include header %>
	<%- include navi %>
		<!-- bar login sign up ... -->
		<link href="css/next.css" rel="stylesheet">
		<link href="/css/next.css" rel="stylesheet">

		<body>

			<!-- Page Content -->
			<div class="container">

				<!-- Jumbotron Header -->

				<h1>
					<br>Những công ty hàng đầu
					<br>
					<br>
				</h1>

				<!-- Page Features -->
				<div class="row text-center">

					<% for(var i=0; i<data.length; i++) { %>
					
							<script>
							var html='';
							html += '<div class="col-lg-3 col-md-6 mb-4">';
							html += '<div class="card">';
							html += '<img class="card-img-top" style="margin-bottom:auto;margin-top:auto;margin-left:auto;margin-right:auto;" src="<%=data[i].imgSrc%>" alt="">';
							html += '<div class="card-body">';
							html += ' <h4 class="card-title"><%=data[i].name%></h4>';
							html += '<p class="card-text">';
							html += '<%=data[i].location%>';
							html += '</p>';
							html += '</div>';
							html += '<div class="card-footer">';
							html += '<a href="/company/<%=data[i].name%>" class="btn btn-primary">Find Out More!</a>';
							html += '</div>';
							html += '</div>';
							html += '</div>';
							document.write(html);
							</script>
					
				<% } %>


				</div>
				<!-- /.row -->

			</div>
			<!-- /.container -->

			<%- include footer %>