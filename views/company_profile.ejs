		<h2>Company Rating</h2>
		<span>&nbsp;&nbsp;</span>
		<span  id="one" class="fa fa-star "  ></span>
		<span  id="two" class="fa fa-star "  ></span>
		<span  id="three" class="fa fa-star"  ></span>
		<span  id="four" class="fa fa-star"  ></span>
		<span  id="five" class="fa fa-star"  ></span>
		<span ><font id="tb" size="8" color="orange"> &nbsp;<%=star[0].avg%></font></span>
		<p>&nbsp;&nbsp;&nbsp;&nbsp;<input id="startRate" class="button"  type="submit" value="Rating this company." onclick="document.getElementById('your-rate').style.display='block'" alt="rate"></p>
		
		<script>
		//chua co ai danh gia
		if('<%=star[0].avg%>'=='')document.getElementById("tb").innerHTML='&nbsp;0';
		else
		{		
		show(parseFloat('<%=star[0].avg%>'));
		}
		</script>

		<div class="alert" id="alert">
		<span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
		<strong><%=mess%></strong> 
		</div>
		
		<script>
			if('<%=mess%>'=='')document.getElementById('alert').style.display='none';
		</script>
		
		<div id="your-rate">
		<h2>Your Rating</h2>
		<form method="post" action="/company/<%=data[0].name%>">
		<span>&nbsp;&nbsp;</span>
		<span  name="one" id="oneStar" class="fa fa-star " onclick="showStar(1)" value="1" ></span>
		<span name="two" id="twoStar" class="fa fa-star " onclick="showStar(2)" value="2" ></span>
		<span name="three" id="threeStar" class="fa fa-star" onclick="showStar(3)" value="3" ></span>
		<span name="four" id="fourStar" class="fa fa-star" onclick="showStar(4)" value="4" ></span>
		<span name="five" id="fiveStar" class="fa fa-star" onclick="showStar(5)" value="5" ></span>
		<br>
		<span id="select" name="select"></span>
		<br>
		<textarea style="width:90%;height:150px;" placeholder="Viết bình luận..." type="text" name="comment" id='comment'></textarea>
		<input id="rate" class="button"  name="rateBtn" type="submit" value="Gửi." onclick="load();" alt="rate">
		</form>
		</div>

		<script>
		var star=0;var select='';
		function showStar(num)
		{	star=num; 
			select='<br><font color="blue">You will rate '+num+' star.<br></font>';
			document.getElementById('select').innerHTML=select;
			document.getElementById('alert').style.display='none';
			showClick(num);	
		}
		function load()
		{		
			// comment có dạng 1<cmt> 2<cmt>  
			var cmt=document.getElementById("comment").value;
			document.getElementById("comment").value = star+cmt;
			window.location.href='/company/<%=data[0].name%>';
		}
		</script>
			
            
